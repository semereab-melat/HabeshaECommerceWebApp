@model IEnumerable<Origin>

@{
    ViewData["Title"] = "Index";
}

   <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Catagory List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Origin" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp;Create Product Origin</a>
            </div>
        </div>
         <br /><br />
   
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                 <th>
                    Made In Country
                </th>                            
            </tr>
           
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
               <tr>
                   <td width="30%">
                       @obj.OriginCountry
                   </td>                 
                   <td>
                       <div class="w-75 btn-group" role="group">
                           <a asp-controller="Origin" asp-action="Edit" asp-route-id=@obj.Id 
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a> 
                           
                           <a asp-controller="Origin" asp-action="Delete" asp-route-id=@obj.Id 
                           class="btn btn-danger"> <i class="bi bi-trash"></i> Delete </a>
                       </div>
                   </td>

               </tr>
            }
        </tbody>
    </table>
     </div>
     

