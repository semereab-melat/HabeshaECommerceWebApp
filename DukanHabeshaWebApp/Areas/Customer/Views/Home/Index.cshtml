
@model IEnumerable<DukanHabeshaModels.Product>

 <div class="row">

        <div class="col-2">
             <div class="row pb-3 p-2">
                 <div class=" p-1">
                    <a asp-action="GetClothsCategory" class="btn btn-primary form-control"> Cloths</a>

                 </div>
                 <div class=" p-1">
                     <a asp-action="GetFoodStuffCategory" class="btn btn-primary form-control"> Food Stuff</a>

                 </div>
           <div class=" p-1">
               <a asp-action="GetHouseDecorationCategory" class="btn btn-primary form-control"> House Decoration</a>
           </div>
           <div  class=" p-1">
               <a asp-action="GetAntiqueCategory" class="btn btn-primary form-control"> Antique</a>
           </div>
           <div class=" p-1">
               <a asp-action="GetJewleryCategory" class="btn btn-primary form-control"> Jewlery</a>
           </div>
            
            

        </div>
        </div>

        <div class="col-10">
            <div class="row pb-3">
                    @foreach (var product in Model)
                    {
                        //col-lg-3 means we can see 4 products next to each other but in large screen size(lg)
                        //col-md-6 means we can see 2 products next to each other but in meduim screen size(md)
                <div class="col-lg-3 col-md-6">
                    <div class="row p-2">
                        <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                            <div class="card">
                                <img src="@product.ImageUrl" class="card-img-top rounded"/>

                                <div class="card-body">
                                            @*pl means padding left one*@
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Name.Substring(0, product.Name.Length < 12 ? product.Name.Length : 15)...</p>
                                                @* <p class="card-title text-info">@product.Description </p>*@
                                </div>
                                            @if (@product.IsOnSale)
                                            {
                                                        <div class="pl-1">
                                                            <p> As low as:<b>@string.Format("{0:C2}" , @product.Price)</b></p>
                                                        </div>
                                            }

                                            else
                                            {
                                                        <div class="pl-1">
                                                        <p>Price: <b>@string.Format("{0:C2}" , @product.Price)</b></p>
                                                        </div>
                                            }


                                </div>
                            </div>
                            <div>
                                        @* form control helps to fill the whole width*@
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                                    Details
                                </a>
                            </div>
                        </div> 
                    </div>
                </div>

                    }

            </div>
        </div>
 </div>




